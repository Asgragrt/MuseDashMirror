{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api",
      "filter": "filter.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "dest": "../site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "MuseDashMirror",
      "_appTitle": "MuseDashMirror",
      "_enableSearch": true,
      "pdf": true
    }
  }
}